{
	"name": "orisai/installer",
	"description": "Composer installer for nette/di based packages",
	"keywords": [
		"bootstrap",
		"configurator",
		"DI",
		"installer",
		"nette",
		"orisai"
	],
	"type": "composer-plugin",
	"license": "MPL-2.0",
	"homepage": "https://github.com/orisai/installer",
	"authors": [
		{
			"name": "Marek BartoÅ¡",
			"homepage": "https://github.com/mabar"
		}
	],
	"require": {
		"php": ">=7.4.0 <8.2.0",
		"ext-mbstring": "*",
		"composer-plugin-api": "^2.0.0",
		"nette/php-generator": "^3.4.0",
		"orisai/exceptions": "^1.0.0",
		"orisai/nette-di": "^1.0.0",
		"orisai/vfs": "^1.0.0",
		"symfony/filesystem": "^5.3.0|^6.0.0",
		"symfony/polyfill-php80": "^1.24.0"
	},
	"require-dev": {
		"brianium/paratest": "^6.3.0",
		"composer/composer": "^2.0.0",
		"infection/infection": "^0.26.0",
		"orisai/coding-standard": "^2.0.0",
		"phpstan/extension-installer": "^1.0.0",
		"phpstan/phpstan": "^1.0.0",
		"phpstan/phpstan-deprecation-rules": "^1.0.0",
		"phpstan/phpstan-nette": "^1.0.0",
		"phpstan/phpstan-phpunit": "^1.0.0",
		"phpstan/phpstan-strict-rules": "^1.0.0",
		"phpunit/phpunit": "^9.5.0",
		"staabm/annotate-pull-request-from-checkstyle": "^1.7.0"
	},
	"autoload": {
		"psr-4": {
			"Orisai\\Installer\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\Orisai\\Installer\\": "tests"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
		"sort-packages": true,
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"infection/extension-installer": true,
			"phpstan/extension-installer": true
		}
	},
	"extra": {
		"class": "Orisai\\Installer\\Plugin"
	}
}
